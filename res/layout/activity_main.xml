<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity" >
	<RelativeLayout
	    android:id="@+id/main_header"
	    android:layout_width="match_parent"
	    android:layout_height="80dip"
	    android:background="@drawable/main_header"
	    android:layout_centerHorizontal="true">
	    <ImageView
	        android:id="@+id/logo_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/logo_vertical"
	        android:layout_centerHorizontal="true"
	        android:background="@android:color/transparent"
	        android:layout_centerVertical="true"
	         />
	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/body"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/main_header"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="10dp" >

		<LinearLayout 
		    	android:orientation="vertical"
		        android:id="@+id/chamados"
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		         >
		    <ImageView
		        android:id="@+id/icon_chamados"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon_chamados"
		        android:background="@android:color/transparent"
		        android:layout_gravity="center"
		         />
		    <Button 
		        android:id="@+id/btn_chamados"
		        android:textColor="@color/white"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Novos Chamados"
	            android:padding="5dip"
	            android:layout_gravity="center"
	            android:background="@drawable/main_btn_bg"
	            android:textSize="14sp"
	            android:layout_marginTop="10dp"
	            />
		</LinearLayout>
		<LinearLayout 
		    	android:orientation="vertical"
		    	android:id="@+id/historico"
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_toRightOf="@id/chamados"
				android:layout_marginLeft="10dp" >
		    <ImageView
		        android:id="@+id/icon_historico"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon_historico"
		        android:background="@android:color/transparent"
		        android:layout_gravity="center"		        
		         />
		    <Button 
		        android:id="@+id/btn_historico"
		        android:textColor="@color/white"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Meus Chamados"
	            android:padding="5dip"
	            android:layout_gravity="center"
	            android:background="@drawable/main_btn_bg"
	            android:textSize="14sp"
	            android:layout_marginTop="10dp"
	            />
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
