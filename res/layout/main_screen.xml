<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="6"
        >
   
	<RelativeLayout
	    android:id="@+id/main_header"
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="@drawable/main_header"
	    android:layout_columnSpan="5"
        android:layout_gravity="center_horizontal">
	    <ImageView
	        android:id="@+id/logo_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/logo_vertical_v2"
	        android:layout_centerHorizontal="true"
	        android:background="@android:color/transparent"
	        android:layout_centerVertical="true"
	         />
	</RelativeLayout>
	
	<ImageView
		android:id="@+id/icon_chamados"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/icon_chamados"
		android:background="@android:color/transparent"
		android:layout_gravity="center"
		android:layout_row="3"
        android:layout_column="2"
        
		/>	
	<Button 
		android:id="@+id/btn_chamados"
		android:textColor="@color/white"
	    android:layout_width="148dp"
	    android:layout_height="wrap_content"
	    android:text="Novos Chamados"
	    android:padding="5dip"
	    android:layout_gravity="center"
	    android:background="@drawable/main_btn_selector"
	    android:textSize="14sp"
	    android:layout_row="5"
        android:layout_column="2"
	    />
	
	<ImageView
		android:id="@+id/icon_minha_conta"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/icon_minha_conta"
		android:background="@android:color/transparent"
		android:layout_gravity="center"
		android:layout_row="7"
        android:layout_column="2"
        
		/>	
	<Button 
		android:id="@+id/btn_minha_conta"
		android:textColor="@color/white"
	    android:layout_width="148dp"
	    android:layout_height="wrap_content"
	    android:text="Minha Conta"
	    android:padding="5dip"
	    android:layout_gravity="center"
	    android:background="@drawable/main_btn_selector"
	    android:textSize="14sp"
	    android:layout_row="9"
        android:layout_column="2"
	    />
	
    <ImageView
		        android:id="@+id/icon_historico"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon_historico"
		        android:background="@android:color/transparent"
		        android:layout_gravity="center"
		        android:layout_row="3"
        		android:layout_column="4"
        			        
		         />
	<Button 
		        android:id="@+id/btn_historico"
		        android:textColor="@color/white"
	           android:layout_width="148dp"
	            android:layout_height="wrap_content"
	            android:text="Meus Chamados"
	            android:padding="5dip"
	            android:layout_gravity="center"
	            android:background="@drawable/main_btn_selector"
	            android:textSize="14sp"
	             android:layout_row="5"
        		android:layout_column="4"
	            />
	<ImageView
		        android:id="@+id/icon_ajuda"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon_ajuda"
		        android:background="@android:color/transparent"
		        android:layout_gravity="center"
		        android:layout_row="7"
        		android:layout_column="4"
        			        
		         />
		    <Button 
		        android:id="@+id/btn_ajuda"
		        android:textColor="@color/white"
	            android:layout_width="148dp"
	            android:layout_height="wrap_content"
	            android:text="Ajuda"
	            android:padding="5dip"
	            android:layout_gravity="center"
	            android:background="@drawable/main_btn_selector"
	            android:textSize="14sp"
	            android:layout_row="9"
        		android:layout_column="4"
	            />
	<RelativeLayout
	    android:id="@+id/main_footer"
	    android:layout_width="match_parent"
	    android:layout_height="100dip"
	    android:padding="10dp"
	    android:background="@color/blueq"
	    android:layout_gravity="center_horizontal"
	    android:layout_columnSpan="5"
        android:layout_row="11">
	    <TextView 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:text="Notificações"
	        android:textColor="@color/white"/>
	</RelativeLayout>
    
    <!-- colunas -->
    <Space
         android:layout_row="1"
         android:layout_column="1"
        android:layout_width="8dp"
         android:layout_gravity="fill"
            />
    <Space
         android:layout_row="1"
         android:layout_column="3"
         android:layout_width="2dp"
         android:layout_gravity="fill"
         />
    <Space
         android:layout_row="1"
         android:layout_column="5"
         android:layout_width="8dp"
         android:layout_gravity="fill"
         />
    <!-- linhas -->
    <Space
         android:layout_row="2"
         android:layout_column="1"
         android:layout_height="10dp"
         android:layout_gravity="fill"
         />
    <Space
         android:layout_row="4"
         android:layout_column="1"
         android:layout_height="10dp"
         android:layout_gravity="fill"
         />
    <Space
         android:layout_row="6"
         android:layout_column="1"
         android:layout_height="10dp"
         android:layout_gravity="fill"
         />
    <Space
         android:layout_row="8"
         android:layout_column="1"
         android:layout_height="10dp"
         android:layout_gravity="fill"
         />
    <Space
         android:layout_row="10"
         android:layout_column="1"
         android:layout_height="10dp"
         android:layout_gravity="fill"
         />
</GridLayout>