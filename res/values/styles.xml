<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="QFIXR" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/QFIXRActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/upnav</item>
    </style>

    <style name="QFIXRActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#005699</item>
   		<item name="android:titleTextStyle">@style/Theme.QFIXR.ActionBar.TitleTextStyle</item>
    </style>        

    <style name="Theme.QFIXR.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
   	 <item name="android:textColor">@color/white</item>
    </style>  

</resources>
